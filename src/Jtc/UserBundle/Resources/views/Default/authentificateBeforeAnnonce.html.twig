{% extends "JtcDefaultBundle::layout.html.twig" %}

{% block content %}
    <div class="container">
        <form class="col-md-6" action="{{ path('fos_user_security_check') }}" method="post">
            <h3>{{ 'user.connexion'|trans }}</h3>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username|default('') }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <div class="form-group">
                <button class="btn btn-default" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
            </div>
        </form>
        <form class="col-md-6" action="{{ path('jtc_user_register_before_annonce', {id: id}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            <h3>{{ 'user.inscription'|trans }}</h3>
            {{ form_widget(form) }}
            <div class="form-group">
                <button class="btn btn-default" type="submit" id="submit" name="submit">{{ 'registration.submit'|trans }}</button>
            </div>
        </form>

    </div>
{% endblock content %}
