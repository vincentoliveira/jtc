<header class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('jtc_annonce_homepage') }}">{{ 'menu.title'|trans }}</a>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                <li {% if 'jtc_annonce_create' in breadcrumb %}class="active"{% endif %}>
                    <a href="{{ path('jtc_annonce_create') }}">{{ 'menu.ajouter_annonce'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('jtc_annonce_voyageurs') }}">{{ 'menu.voyageurs'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('jtc_annonce_expediteurs') }}">{{ 'menu.expediteurs'|trans }}</a>
                </li>
                {% if is_granted("ROLE_USER") %}
                <li {% if 'jtc_annonce_mes_annonces' in breadcrumb %}class="active"{% endif %}>
                    <a href="{{ path('jtc_annonce_mes_annonces') }}">{{ 'menu.mes_annonce'|trans }}</a>
                </li>
                {% endif %}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li {% if 'fos_user_profile_edit' in breadcrumb %}class="active"{% endif %}>
                        <a href="{{ path('fos_user_profile_show') }}">{{ 'menu.bonjour_utilisateur'|trans({'%utilisateur%': app.user.username})|raw }}</a>
                    </li>
                    <li class="link-logout"><a href="{{ path('fos_user_security_logout') }}">{{ 'menu.deconnexion'|trans({}) }}</a></li>
                {% else %}
                    <li {% if 'fos_user_security_login' in breadcrumb %}class="active"{% endif %}>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'menu.connexion'|trans }}</a>
                    </li>
                    <li {% if 'fos_user_registration_register' in breadcrumb %}class="active"{% endif %}>
                        <a href="{{ path('fos_user_registration_register') }}">{{ 'menu.inscription'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</header>
