<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Zecolis{% endblock %}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        {% block meta %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}
        
        {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        {% endblock %}

        <link rel="icon" type="image/x-icon" ref="{{ asset('favicon.ico') }}">
    </head>
    <body>
        {% include "JtcDefaultBundle::nav_bar.html.twig" %}
        <div class="container">
            <ol class="breadcrumb">
                {% for route in breadcrumb %}
                <li {% if loop.last %}class="active"{% endif %}><a href="{{ path(route, app.request.attributes.get('_route_params')) }}">{{ ('route.'~route)|trans }}</a></li>
                {% endfor %}
            </ol>
        </div>
            
        {% block content %}{% endblock %}
            
        <hr/>
        <footer>
            <div class="container">
                <p>{{ 'jtc.copyright'|trans }}</p>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>